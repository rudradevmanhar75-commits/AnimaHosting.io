                <input type="text" id="a-cat" placeholder="Category (e.g. Action, Romance, Simulcasts)">
                
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 15px;">
                    <input type="number" id="a-seasons" placeholder="Seasons (1-1000)" min="1" max="1000">
                    <input type="number" id="a-eps" placeholder="Episodes (1-1000)" min="1" max="1000">
                </div>

                <label>Thumbnail Image (Banner):</label>
                <input type="file" id="a-img" accept="image/*">
                
