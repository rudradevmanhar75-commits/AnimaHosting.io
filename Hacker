    <script>
        // Real Configuration
        const firebaseConfig = {
            apiKey: "AIzaSyBuYwkLGEOx4FWwCkcsfWfVozXfHkepR8E",
            authDomain: "anima-hosting-app.firebaseapp.com",
            projectId: "anima-hosting-app",
            storageBucket: "anima-hosting-app.firebasestorage.app",
            messagingSenderId: "883981430156",
            appId: "1:883981430156:web:a4a8fab02ff42b31707aa9"
        };
        firebase.initializeApp(firebaseConfig);
        const db = firebase.database();
        const storage = firebase.storage();

        // 1. Working Login Logic
        function doLogin() {
            const e = document.getElementById('adm-email').value;
            const p = document.getElementById('adm-pass').value;
            // Admin Credentials as requested
            if(e === "rudradevmanhar820@gmail.com" && p === "rudra@#_/0000") {
                document.getElementById('login-overlay').style.display = 'none';
                initPanel();
            } else {
                alert("Access Denied! Incorrect Admin Details.");
            }
        }

        // 2. Sidebar Toggle
        function toggleSidebar() {
            document.getElementById('sidebar').classList.toggle('hidden');
            document.getElementById('main').classList.toggle('full');
        }

        // 3. Tab Navigation
        function showTab(tab) {
            ['dash', 'upload', 'manage', 'users'].forEach(t => {
                document.getElementById('view-' + t).classList.add('hidden');
            });
            document.getElementById('view-' + tab).classList.remove('hidden');
            document.getElementById('tab-title').innerText = tab.toUpperCase();
        }

        // 4. Working Upload Function
        async function startHosting() {
            const btn = document.getElementById('pub-btn');
            const prog = document.getElementById('prog-area');
            const title = document.getElementById('a-title').value;
            
            if(!title) return alert("Title zaroori hai!");

            btn.disabled = true;
            prog.classList.remove('hidden');

            try {
                const imgFile = document.getElementById('a-img').files[0];
                const vidFile = document.getElementById('a-vid').files[0];

                // Step 1: Image Upload
                const imgRef = storage.ref(`content/thumbs/${Date.now()}_thumb`);
                await imgRef.put(imgFile);
                const imgUrl = await imgRef.getDownloadURL();

                // Step 2: Video Upload
                const vidRef = storage.ref(`content/videos/${Date.now()}_video`);
                await vidRef.put(vidFile);
                const vidUrl = await vidRef.getDownloadURL();

                // Step 3: Database Save
                db.ref('anime').push({
                    title: title,
                    desc: document.getElementById('a-desc').value,
                    category: document.getElementById('a-cat').value,
                    seasons: document.getElementById('a-seasons').value,
                    episodes: document.getElementById('a-eps').value,
                    thumbnail: imgUrl,
                    videoUrl: vidUrl,
                    timestamp: Date.now()
                });

                alert("Anime Successfully Hosted!");
                location.reload();
            } catch(e) {
                alert("Error: " + e.message);
                btn.disabled = false;
                prog.classList.add('hidden');
            }
        }

        // 5. Data Initialization (Real-time)
        function initPanel() {
            // Anime Stats & Management
            db.ref('anime').on('value', snap => {
                const data = snap.val() || {};
                document.getElementById('count-anime').innerText = snap.numChildren();
                
                const table = document.getElementById('anime-table');
                table.innerHTML = '';
                for(let id in data) {
                    table.innerHTML += `
                        <tr>
                            <td><b>${data[id].title}</b></td>
                            <td>${data[id].category}</td>
                            <td>S:${data[id].seasons} | E:${data[id].episodes}</td>
                            <td class="action-btns">
                                <button class="del-btn" onclick="deleteAnime('${id}')">Delete</button>
                            </td>
                        </tr>
                    `;
                }
            });

            // Live Users Counter
            db.ref('status').on('value', snap => {
                const users = snap.val() || {};
                const onlineCount = Object.values(users).filter(u => u.online).length;
                document.getElementById('count-online').innerText = onlineCount;
                document.getElementById('count-users').innerText = snap.numChildren();
                
                const userTable = document.getElementById('user-table');
                userTable.innerHTML = '';
                for(let uid in users) {
                    userTable.innerHTML += `
                        <tr>
                            <td>User_${uid.substring(0,5)}@app.com</td>
                            <td style="color:${users[uid].online?'green':'red'}">${users[uid].online?'Online':'Offline'}</td>
                            <td><button onclick="alert('User Blocked')">Block</button></td>
                        </tr>
                    `;
                }
            });
        }

        function deleteAnime(id) {
            if(confirm("Delete this anime forever?")) {
                db.ref('anime/' + id).remove();
            }
        }

        function updateTheme(val) {
            document.documentElement.style.setProperty('--primary', val);
            db.ref('settings/theme').set(val);
        }
    </script>
